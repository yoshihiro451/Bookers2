<div class="container">
  <div class="row">
    <div class="col-xs-3">
      <h2>Log in</h2>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group has-icon">
          <label class="control-label sr-only" for="inputEmail">Email</label>
          <h4>Name</h4>
          <%= f.email_field :email, autofocus: true, class:"form-control", id:"inputEmail", placeholder:""%>
          <span class="fa fa-envelope form-control-icon" aria-hidden="true"></span>
        </div>
        <div class="form-group has-icon">
          <label class="control-label sr-only" for="inputEmail">Password</label>
          <h4>Password</h4>
          <%= f.password_field :password, autocomplete: "off", class:"form-control", id:"inputEmail", placeholder:"" %>
          <span class="fa fa-lock form-control-icon" aria-hidden="true"></span>
        </div>
        <%= f.submit "Log in", class:"btn  btn-primary" %>
      <% end %>
    <%= render "devise/shared/links" %>

    </div>
    <div class="col-xs-9"></div>

  </div>
</div>
