<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <nav class="navbar navbar-inverse">
       <div class="container">
          <div class="container-fluid">
              <div class="navbar-header">
                <span>Bookers</span>
              </div>
              <div id="slidemenu">
                <ul class="nav navbar-nav navbar-right" data-hover="dropdown" data-animations="zoomIn fadeIn fadeInUp fadeIn">
                  <% if user_signed_in? %>
                    <li class="">
                      <%= link_to "Home", user_path(current_user.id),class: "glyphicon glyphicon-home" %>
                    </li>
                    <li class="">
                      <%= link_to 'Users', users_path,class: "glyphicon glyphicon-user" %>
                    </li>
                    <li class="">
                      <%= link_to 'Books', books_path,class: "glyphicon glyphicon-book" %>
                    </li>
                    <li class="">
                    </li>
                    <li class="">
                      <%= link_to "Logout", destroy_user_session_path,class: "glyphicon glyphicon-share", method: :delete %>
                    </li>
                  <% else %>
                    <li class="">
                      <%= link_to "Home", home_path,class: "glyphicon glyphicon-home" %>
                    </li>
                    <li class="">
                      <%= link_to "About", about_path,class: "glyphicon glyphicon-link" %>
                    </li>
                    <li class="">
                      <%= link_to "sign up", new_user_registration_path,class: "glyphicon glyphicon-edit" %>
                    </li>
                    <li class="">
                      <%= link_to "login", new_user_session_path,class: "glyphicon glyphicon-log-in" %>
                    </li>
                  <% end %>
                </ul>
               </div>
             </div>
        </div>
      </div>
    </nav>
   <%= yield %>
<div class="container">
  <div class="row">
    <div class="col-xs-3 col-xs-offset-9">
      <span>CopyRight Infratop.inc</span>
    </div>
  </div>
</div>
  </body>
</html>
